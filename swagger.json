{
  "swagger": "2.0",
  "info": {
    "description": "https://github.com/marcopestrin/MERN-boilerplate",
    "version": "1.0.0",
    "title": "Swagger MERN Boilerplate PES",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "pestrinmarco@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "127.0.0.1",
  "basePath": "/v1/",
  "tags": [
    {
      "name": "Auth",
      "description": "Everything about login and registration"
    },
    {
      "name": "User",
      "description": "Everything about user management"
    },
    {
      "name": "Dev",
      "description": "Technical information"
    }
  ],
  "schemes": ["http"],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login user already exist",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "username",
            "required": true

          }, 
          {
            "in": "body",
            "name": "password",
            "required": true

          }
        ],
        "responses": {
          "200": {
            "description": "Return accessToken and refreshToken"
          }, 
          "401": {
            "description": "Wrong credentials"
          },
          "400": {
            "description": "Wrong input"
          },
          "500": {
            "description": "Generic error"
          }
        }
      }
    },
    "/auth/reset": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "When you forget your password",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "email",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Send an email to your address with a resetToken"
          },
          "500": {
            "description": "Generic error"
          }
        }
      }
    },
    "/auth/recoveryPassword": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "With this method you can update your password",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "password",
            "required": true
          },
          {
            "in": "body",
            "name": "id",
            "required": true
          },
          {
            "in": "body",
            "name": "refreshToken",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Password updated"
          },
          "403": {
            "description": "Password not valid"
          },
          "500": {
            "description": "Generic error"
          }
        }
      }
    },
    "/dev/version": {
      "get": {
        "tags": ["Dev"],
        "summary": "Get the application's version",
        "consumes": [ "application/json"],
        "produces": [ "application/json"],
        "parameters": [],
        "responses": {
          "200": { "description": "Return the version of the application" }
        }
      }
    },
    "/user/update": {
      "post": {
        "tags": ["User"],
        "summary": "Update some information about the user profile",
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [{
          "in": "body",
          "name": "username",
          "required": true
        }, {
          "in": "body",
          "name": "password",
          "required": true
        }, {
          "in": "body",
          "name": "email",
          "required": true
        }, {
          "name": "accessToken",
          "in": "cookie",
          "required": true
        }],
        "responses": {
          "200": { "description": "User updated" },
          "500": { "description": "Generic error" }
        }
      }
    },
    "/user/create": {
      "post": {
        "tags": ["User"],
        "summary": "Create a new user" ,
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [{
          "in": "body",
          "name": "username",
          "required": true
        }, {
          "in": "body",
          "name": "password",
          "required": true
        }, {
          "in": "body",
          "name": "email",
          "required": true
        }],
        "responses": {
          "200": { "description": "User created" },
          "422": { "description": "User already exist" },
          "500": { "description": "Generic error" }
        }
      }
    },
    "/user/active": {
      "put": {
        "tags": ["User"],
        "summary": "Enable a profile" ,
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [{
          "in": "query",
          "name": "id",
          "required": true
        }, {
          "name": "accessToken",
          "in": "cookie",
          "required": true
        }],
        "responses": {
          "200": { "description": "Activated user" },
          "500": { "description": "Generic error" }
        }
      }
    },
    "/user/disable": {
      "put": {
        "tags": ["User"],
        "summary": "Disable a profile" ,
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [{
          "in": "query",
          "name": "id",
          "required": true
        }, {
          "name": "accessToken",
          "in": "cookie",
          "required": true
        }],
        "responses": {
          "200": { "description": "User disabled" },
          "500": { "description": "Generic error" }
        }
      }
    },
    "/user/delete": {
      "delete": {
        "tags": ["User"],
        "summary": "Delete a user by id" ,
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [{
          "in": "query",
          "name": "id",
          "required": true
        }, {
          "name": "accessToken",
          "in": "cookie",
          "required": true
        }],
        "responses": {
          "200": { "description": "User deleted" },
          "500": { "description": "Generic error" }
        }
      }
    },
    "/user/getAllUsers": {
      "get": {
        "tags": ["User"],
        "summary": "Get a list with all users. Enabled and disabled" ,
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [{
          "name": "accessToken",
          "in": "cookie",
          "required": true
        }],
        "responses": {
          "200": { "description": "Return a list of users" },
          "500": { "description": "Generic error" }
        }
      }
    },
    "/user/getUserById":  {
      "get": {
        "tags": ["User"],
        "summary": "Get some information about a user" ,
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [{
          "in": "query",
          "name": "id",
          "required": true
        }, {
          "name": "accessToken",
          "in": "cookie",
          "required": true
        }],
        "responses": {
          "200": { "description": "" },
          "500": { "description": "Generic error" }
        }
      }
    },
    "/user/confirmEmail/{email}/{activeCode}":  {
      "get": {
        "tags": ["User"],
        "summary": "Active a user" ,
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [{
          "in": "path",
          "name": "email",
          "required": true
        }, {
          "in": "path",
          "name": "activeCode",
          "required": true
        }],
        "responses": {
          "200": { "description": "User activated" },
          "500": { "description": "Generic error" }
        }
      }
    }
  },


  "accessToken": {
    "type": "apiKey",
    "name": "accessToken",
    "in": "cookie"
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "active": {
          "type": "boolean"
        },
        "timeRegistration": {
          "type": "date"
        },
        "resetToken": {
          "type": "string"
        },
        "activeToken": {
          "type": "string"
        },
        "role": {
          "type": "number",
          "description": "1: user, 2: admin"
        }
      }
    }
  }
}